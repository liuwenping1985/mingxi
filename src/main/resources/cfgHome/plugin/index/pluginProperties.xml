<?xml version="1.0" encoding="utf-8"?>
<ctpConfig>
	<index>
	<!-- # 模式选择 （参数值： 本地模式为local ，分布式模式为remote）        #
         # 本地模式下请保持默认，分布式模式下请设置A8和全文检索服务器的IP地址# -->
		<modelName>local</modelName>
		<!-- #全文检索服务器的IP地址（请填入全文检索服务器的IP地址） -->
        <indexIp>127.0.0.1</indexIp>
        <!-- #A8服务器的IP地址（请填入A8服务器的IP地址） -->
        <a8Ip>127.0.0.1</a8Ip>
        <!-- #全文检索服务的端口（除非发生冲突，否则不建议修改） -->
        <indexPort>1099</indexPort>
        <!-- #全文检索服务器服务名（请保持默认，不建议修改） -->
        <indexServiceName>indexService</indexServiceName>
        <!-- #解析文档的时间间隔，单位毫秒（请保持默认，不建议修改） -->
        <indexParseTimeSlice>6000</indexParseTimeSlice>
        <!-- #更新的时间间隔,单位分钟（请保持默认，不建议修改） -->
        <indexUpdateTimeSlice>3</indexUpdateTimeSlice>
        <!-- #每天索引库提交时间24小时制 -->
        <daystart>23:15</daystart>
        <!-- #每天索引库提交时间间隔，24是每天只提交一次，12是每天提交2次 -->
        <interval>24</interval>
        <!-- #本地最大注册数 -->
        <localRegMaxNumber>500</localRegMaxNumber>
        <!-- M {VP} 全文检索库文件存放路径 -->
        <folder mark="{VP}" desc="全文检索库文件存放路径">${ctp.base.folder}/index</folder>
	</index>
	<!-- 
	该例中可通过AppContext.getSystemProperty("index.test.name")取得“全文检索”，
	AppContext.getSystemProperty("index.test")取得“全文检索模块” 
	注意：属性key必须以插件id开始
	-->
</ctpConfig>