<?xml version="1.0" encoding="UTF-8"?>
<portlets>
	<portlet>
		<!-- 唯一标识，用于权限判断及Portlet数据更新 （个人行为绩效）-->
		<portletId>bigShowIndex</portletId>
		<!-- 需要进行权限判断时使用的资源Id -->
		<resourceCode>F05_show</resourceCode>
		<!-- 需要进行权限判断时使用的插件Id -->
		<pluginId>show</pluginId>
		<!-- Portlet名称,可以为空 -->
		<portletName>show.common.menu</portletName>
		<!-- Portlet显示名称,不能为空,预制数据需要国际化 -->
		<displayName>show.common.menu</displayName>
		<!-- Portlet所属空间类别 -->
		<spaceTypes>personal,personal_custom,leader,outer,custom,department,corporation,public_custom,group,public_custom_group,cooperation_work,objective_manage,edoc_manage,meeting_manage,performance_analysis,form_application,related_project_space,m3mobile,weixinmobile</spaceTypes>
		<!-- Portlet分类 -->
		<category>publicInformation</category>
		<!-- Portlet点击响应地址 -->
		<portletUrl><![CDATA[/show/show.do?method=showIndex]]></portletUrl>
		<!-- Portlet点击响应地址类型,space:空间地址,workspace:系统工作区地址,open:系统新窗口地址,link:外部地址 -->
		<portletUrlType>open</portletUrlType>
		<!-- Portlet大小,0:中,1:大 -->
		<size>0</size>
		<!-- Portlet排序 -->
		<order>8</order>
		<!-- Portlet展示图片 -->
		<imageLayouts>
			<imageLayout>
				<!-- 图片路径 -->
				<imageUrl><![CDATA[d_bigshow.png]]></imageUrl>
				<!-- 图片名称 -->
				<imageName>show.common.menu</imageName>
				<!-- 图片内容标题 -->
				<imageTitle></imageTitle>
				<!-- 图片内容摘要 -->
				<summary></summary>
			</imageLayout>
		</imageLayouts>
	</portlet>
</portlets>
