<?xml version="1.0" encoding="UTF-8"?>
<portlets>
	<!-- 新建任务-->
	<portlet>
		<!-- 唯一标识，用于权限判断及Portlet数据更新 -->
		<portletId>newCreateTask</portletId>
		<!-- 需要进行权限判断时使用的资源Id-->
		<resourceCode>F02_taskPage</resourceCode>
		<!-- 需要进行权限判断时使用的插件Id-->
		<pluginId>calendar</pluginId>
		<!-- Portlet名称,可以为空 -->
		<portletName>新建任务</portletName>
		<!-- Portlet显示名称,不能为空,预制数据需要国际化 -->
		<displayName>system.weixin.NewTask</displayName>
		<!-- Portlet分类 -->
		<category>timeManagement</category>
		<!-- Portlet点击响应地址 -->
		<portletUrl>mobile</portletUrl>
		<!-- Portlet点击响应地址类型,space:空间地址,workspace:系统工作区地址,open:系统新窗口地址,link:外部地址 -->
		<portletUrlType>workspace</portletUrlType>
		<!-- Portlet大小,0:中,1:大 -->
		<size>0</size>
		<!-- Portlet所属空间类别 -->
		<spaceTypes>m3mobile,weixinmobile</spaceTypes>
		<!-- Portlet排序 -->
		<order>1</order>
		<!-- Portlet展示图片 -->
		<imageLayouts>
			<imageLayout>
				<!-- 图片路径 -->
				<imageUrl><![CDATA[d_newtask.png]]></imageUrl>
				<!-- 图片名称 -->
				<imageName>system.weixin.NewTask</imageName>
				<!-- 图片内容标题 -->
				<imageTitle></imageTitle>
				<!-- 图片内容摘要 -->
				<summary></summary>
			</imageLayout>
		</imageLayouts>
	</portlet>
	<!-- 工作任务-->
	<portlet>
		<!-- 唯一标识，用于权限判断及Portlet数据更新 -->
		<portletId>workTask</portletId>
		<!-- 需要进行权限判断时使用的资源Id-->
		<resourceCode>F02_taskPage</resourceCode>
		<!-- 需要进行权限判断时使用的插件Id-->
		<pluginId>calendar</pluginId>
		<!-- Portlet名称,可以为空 -->
		<portletName>工作任务</portletName>
		<!-- Portlet显示名称,不能为空,预制数据需要国际化 -->
		<displayName>system.weixin.WorkTask</displayName>
		<!-- Portlet分类 -->
		<category>timeManagement</category>
		<!-- Portlet点击响应地址 -->
		<portletUrl>mobile</portletUrl>
		<!-- Portlet点击响应地址类型,space:空间地址,workspace:系统工作区地址,open:系统新窗口地址,link:外部地址 -->
		<portletUrlType>workspace</portletUrlType>
		<!-- Portlet大小,0:中,1:大 -->
		<size>0</size>
		<!-- Portlet所属空间类别 -->
		<spaceTypes>m3mobile,weixinmobile</spaceTypes>
		<!-- Portlet排序 -->
		<order>2</order>
		<!-- Portlet展示图片 -->
		<imageLayouts>
			<imageLayout>
				<!-- 图片路径 -->
				<imageUrl><![CDATA[d_scheduledconference.png]]></imageUrl>
				<!-- 图片名称 -->
				<imageName>system.weixin.WorkTask</imageName>
				<!-- 图片内容标题 -->
				<imageTitle></imageTitle>
				<!-- 图片内容摘要 -->
				<summary></summary>
			</imageLayout>
		</imageLayouts>
	</portlet>
</portlets>
