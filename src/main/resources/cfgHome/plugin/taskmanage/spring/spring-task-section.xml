	<!-- 任务统计 -->
	<bean id="TaskStatisticsSection" class="com.seeyon.ctp.portal.section.TaskStatisticsSection">
		<property name="sectionType" value="timeManagement" />
		<property name="spaceTypes"
			value="personal,personal_custom,leader,outer,cooperation_work,objective_manage,edoc_manage,meeting_manage,performance_analysis,form_application,custom,department" />
		<property name="properties">
			<list>
				<bean class="com.seeyon.ctp.portal.section.SectionPropertyImpl">
					<property name="reference">
						<list>
							<!-- 文本框 -->
							<bean class="com.seeyon.ctp.portal.section.SectionReferenceImpl">
								<property name="name" value="columnsName" />
								<property name="subject" value="栏目名称" />
								<property name="valueType" value="2" />
								<property name="defaultValue" value="我的任务" />
								<property name="validate" value="notNull"></property>
								<property name="validateValue" value="notNull=true maxLength=2000"></property>
							</bean>
							<!-- 文本框 -->
							<bean class="com.seeyon.ctp.portal.section.SectionReferenceImpl">
								<property name="name" value="picHeight" />
								<property name="subject" value="图片高度" />
								<property name="valueType" value="2" />
								<property name="defaultValue" value="210" />
								<property name="validate" value="isInteger" />
								<property name="validateValue" value="max=1000 min=200 maxLength=4" />
							</bean>
							<!-- 文本框 -->
							<bean class="com.seeyon.ctp.portal.section.SectionReferenceImpl">
								<property name="name" value="picWidth" />
								<property name="subject" value="图片宽度" />
								<property name="valueType" value="2" />
								<property name="defaultValue" value="460" />
								<property name="validate" value="isInteger" />
								<property name="validateValue" value="max=1000 min=200 maxLength=4" />
							</bean>

							<!-- 下拉列表 -->
							<bean class="com.seeyon.ctp.portal.section.SectionReferenceImpl">
								<property name="name" value="timeType" />
								<property name="subject" value="时间类型" />
								<property name="valueType" value="0" />
								<property name="defaultValue" value="0" />
								<property name="valueRanges">
									<list>
										<bean
											class="com.seeyon.ctp.portal.section.SectionReferenceValueRangeImpl">
											<property name="subject" value="本周" />
											<property name="value" value="0" />
										</bean>
										<bean
											class="com.seeyon.ctp.portal.section.SectionReferenceValueRangeImpl">
											<property name="subject" value="本月" />
											<property name="value" value="1" />
										</bean>
									</list>
								</property>
							</bean>

							<!-- 下拉列表 -->
							<bean class="com.seeyon.ctp.portal.section.SectionReferenceImpl">
								<property name="name" value="chartType" />
								<property name="subject" value="图表类型" />
								<property name="valueType" value="0" />
								<property name="defaultValue" value="1" />
								<property name="valueRanges">
									<list>
										<bean
											class="com.seeyon.ctp.portal.section.SectionReferenceValueRangeImpl">
											<property name="subject" value="柱状图" />
											<property name="value" value="0" />
										</bean>
										<bean
											class="com.seeyon.ctp.portal.section.SectionReferenceValueRangeImpl">
											<property name="subject" value="饼图" />
											<property name="value" value="1" />
										</bean>
										<bean
											class="com.seeyon.ctp.portal.section.SectionReferenceValueRangeImpl">
											<property name="subject" value="折线图" />
											<property name="value" value="2" />
										</bean>
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>