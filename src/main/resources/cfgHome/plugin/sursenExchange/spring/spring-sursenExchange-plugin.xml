<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="byName">
    <bean id="dataSource-sursenExchange"
        class="com.seeyon.v3x.dbpool.datasource.DataSourceConProvider"
        abstract="false" singleton="true"
        lazy-init="default" autowire="default" dependency-check="default">
        <property name="configProperties">
            <props>
                <prop key="driverClassName">${sursenExchange.db.driverClassName}</prop>                 
                <prop key="url">${sursenExchange.db.url}</prop>
                <prop key="username">${sursenExchange.db.username}</prop>
                <prop key="password">${sursenExchange.db.password}</prop>
                <prop key="minCount">${sursenExchange.db.minCount}</prop>
                <prop key="maxCount">${sursenExchange.db.maxCount}</prop>
            </props>
        </property>
        <property name="name" value="sursenExchange" />
    </bean>
    <bean id="sessionFactory-sursenExchange"
        class="org.springframework.orm.hibernate3.CTPLocalSessionFactoryBean">
        <property name="dataSource">
            <ref local="dataSource-sursenExchange" />
        </property>
        <property name="mappingLocations">
            <list>
                <value>classpath*:com/seeyon/apps/sursenExchange/po/*.hbm.xml</value>
            </list>
        </property>
    </bean>
    <bean id="transactionManager-sursenExchange"
        class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref local="sessionFactory-sursenExchange" />
        </property>
    </bean>

    <bean id="baseTxService-sursenExchange"
        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
        abstract="true">
        <property name="transactionManager" ref="transactionManager-sursenExchange" />
        <property name="proxyTargetClass" value="true" />

        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_SUPPORTS,readOnly</prop>
            </props>
        </property>
    </bean>
</beans>