<?xml version="1.0" encoding="utf-8"?>
<ctpConfig>
	<sms>
		<cmpp3>
			<host mark="{VE}" desc="ISMG主机地址"></host>
			<port mark="{int} {VE}" desc="ISMG主机端口号"></port>
			<SPID mark="{VE}" desc="企业代码SPID"></SPID>
			<password mark="{VE}" desc="登录密码"></password>
			<srcTerminalId mark="{VE}" desc="源终端MSISDN号码（为SP的服务代码或前缀，服务代码的长号码，没有可以为空）"></srcTerminalId>
			<serviceId mark="{VE}" desc="业务类型"></serviceId>
			<msgLevel mark="{int} {VE}" desc="信息类别">1</msgLevel>
			<version mark="{int} {VE}" desc="双方协商的版本号（大于0，小于256）">1</version>
			<heartbeatInterval mark="{int} {VE}" desc="心跳信息发送间隔时间（单位：秒）">15</heartbeatInterval>
			<reconnectInterval mark="{int} {VE}" desc="连接中断时重连间隔时间（单位：秒）">15</reconnectInterval>
			<heartbeatNoresponseout mark="{int} {VE}" desc="需要重连时，连续发出心跳而没有接收到响应的个数（单位：个）">5</heartbeatNoresponseout>
		</cmpp3>

		<ufmobile>
			<host mark="{VE}" desc="UFMobile服务器IP，如128.2.2.10"></host>
			<port mark="{int} {VE}" desc="UFMobile服务器端口，如803"></port>
		</ufmobile>

		<king>
			<name mark="{VE}" desc="短信王用户名"></name>
			<password mark="{VE}" desc="短信王密码"></password>
		</king>

		<jindi>
			<comNum mark="{int} {VE}" desc="金笛短信COM口配置，如：1,2,3,4"></comNum>
		</jindi>

		<merp>
			<host mark="{VE}" desc="NC-MERP服务器IP，如127.0.0.1"></host>
			<port mark="{int} {VE}" desc="NC-MERP服务器端口，如80"></port>
		</merp>
		
		<zenyang>
			<host mark="{VE}" desc="曾杨科技服务地址，如api.jj-mob.com">api.jj-mob.com</host>
			<port mark="{VE}" desc="曾杨科技服务端口，如8080">8080</port>
			<account mark="{VE}" desc="短信账号，一般为6位的字母或数字"></account>
			<password mark="{VE}" desc="短信密码"></password>
			<title mark="{VE}" desc="短信签名（与曾杨确认），如【致远软件】"></title>
		</zenyang>
	</sms>
</ctpConfig>