<?xml version="1.0" encoding="utf-8"?>
<ctpConfig>
	<fk>
	       <enable mark="{option,off,on} {VE}" desc="是否启用off--不启用  on--启用">off</enable>
		<db>
			<driverClassName
				mark="{option,oracle.jdbc.driver.OracleDriver,net.sourceforge.jtds.jdbc.Driver,com.mysql.jdbc.Driver} {VE}"
				desc="历史数据库连接，JDBC驱动ClassName">oracle.jdbc.driver.OracleDriver</driverClassName>
			<hibernateDialect
				mark="{option,org.hibernate.dialect.OracleDialect,org.hibernate.dialect.SQLServerDialect,org.hibernate.dialect.MySQLDialect} {VE}"
				desc="历史数据库连接，Hibernate Dialect">org.hibernate.dialect.OracleDialect</hibernateDialect>
			<url mark="{VE}"
				desc="历史数据库连接; oracle URL:jdbc:oracle:thin:@[DATABASE IP ADDRESS]:[PORT]:[SID],SQLServer URL:jdbc:jtds:sqlserver://[DATABASE IP ADDRESS]:[PORT]/[DATABASE NAME],jdbc:mysql://[DATABASE IP ADDRESS]:[PORT]/[DATABASE NAME]?autoReconnection=true" >jdbc:oracle:thin:@127.0.0.1:1521:fk</url>
			<username mark="{VE}" desc="历史数据库连接，用户名">TEST</username>
			<password mark="{password} {VE}" desc="历史数据库连接，密码">123456</password>
		</db>
	</fk>
</ctpConfig>